<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.nanosys.wegdan.mathgame.GameActivity"
    android:background="@drawable/bg">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15"
            android:textColor="#818181"
            android:textSize="50sp"
            android:layout_margin="20dp"
            android:paddingRight="30dp"
            android:id="@+id/partA"
            android:fontFamily="monospace"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X"
            android:textSize="50sp"
            android:layout_margin="20dp"
            android:paddingRight="55dp"
            android:fontFamily="monospace"
            android:textColor="#000000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="50sp"
            android:layout_margin="20dp"
            android:id="@+id/partB"
            android:fontFamily="monospace"
            android:textColor="#818181"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="="
        android:textSize="60dp"
        android:fontFamily="monospace"
        android:textColor="#000000"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="44"
            android:textSize="50sp"
            android:layout_marginRight="30dp"
            android:fontFamily="monospace"
            android:background="#458e31"
            android:textColor="#ffffff"
            android:onClick="firstAnswer"
            android:id="@+id/firstAnswerButton"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50"
            android:textSize="50sp"
            android:layout_marginRight="30dp"
            android:fontFamily="monospace"
            android:background="#458e31"
            android:textColor="#ffffff"
            android:onClick="secondAnswer"
            android:id="@+id/secondAnswerButton"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="45"
            android:textSize="50sp"
            android:fontFamily="monospace"
            android:background="#458e31"
            android:textColor="#ffffff"
            android:onClick="thirdAnswer"
            android:id="@+id/thirdAnswerButton"/>
    </LinearLayout>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textSize="23sp"
        android:layout_margin="50dp"
        android:layout_gravity="center"
        android:onClick="backToHome"
        android:background="#ff2215"
        android:textColor="#ffffff"
        android:fontFamily="monospace"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Score"
            android:textSize="32sp"
            android:layout_marginRight="25dp"
            android:layout_margin="25dp"
            android:layout_gravity="center"
            android:fontFamily="monospace"
            android:textColor="#ffffff"
            android:background="@color/colorPrimary"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lev.1"
            android:textSize="32sp"
            android:layout_marginLeft="25dp"
            android:layout_margin="25dp"
            android:fontFamily="monospace"
            android:textColor="#ffffff"
            android:background="@color/colorPrimary"
            />
    </LinearLayout>
</LinearLayout>
